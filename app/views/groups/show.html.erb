<article class="welcome">
  <h1><%= @group.name %></h1>

  <div id="julevenn">Din julevenn er ðŸŽ…&nbsp;<%= @julevenn.name %>&nbsp;ðŸŽ…</div>

  <div class="buttons">
    <button id="showJulevenn" onclick="showJulevenn()">Vis meg min julevenn!</button>
    <%= button_to 'Logg ut', '/auth/logout', class: "secondary", method: :get, data: {turbo: false} %>
