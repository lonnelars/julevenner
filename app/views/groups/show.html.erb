</article>

<script>
  function showJulevenn() {
    confetti({particleCount: 100, spread: 70})
    const julevenn = document.getElementById("julevenn");
    julevenn.classList.add("visible")
  }
</script>

<style>
  #julevenn {
    visibility: hidden;
    color: white;
    font-size: min(10vw, 4rem);
    margin: 6rem 0;
    text-align: center;
  }

  #julevenn.visible {
    visibility: visible;
  }

  .buttons {
    display: flex;
  }
</style>
